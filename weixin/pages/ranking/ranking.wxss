.list {
    background-color: #F0F0F0;
}

.item {
    height: 140rpx;
    display: flex;
    background-color: white;
    margin-bottom: 5rpx;
}

.item .rank {
    width: 70rpx;
    margin-left: 40rpx;
    font-size: 35rpx;
    line-height: 140rpx;
    text-align: center;
}

.item .user {
    height: 140rpx;
    line-height: 140rpx;
    text-align: center;
    display: inline-block;
}

.item .user-face {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-left: 20rpx;
    vertical-align: middle;
}

.item .user-name {
    width: 40%;
    line-height: 140rpx;
    text-align: left;
    margin-left: 20rpx;
    font-size: 35rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item .step {
    width: 160rpx;
    color: #4dc47f;
    font-size: 50rpx;
    line-height: 140rpx;
}

.summary-image {
    width: 100%;
    height: 230rpx;
    border-radius: 10rpx;
}

.summary-text {
    position: relative;
    left: 90rpx;
    bottom: 200rpx;
    color: #ffffff;
    font-size: 36rpx;
    text-align: center;
    text-shadow: 0 0 14rpx #000000;
}

.sign {
    height: 240rpx;
    margin: 10rpx 10rpx 5rpx 10rpx;
}

.sign-bottom{
    height: 230rpx;
    margin: 18rpx 50rpx 28rpx 50rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
