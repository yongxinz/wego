<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar" style="background-color: white; position: fixed">
                <block wx:for="{{ tabs }}" wx:key="*this">
                    <view id="{{ index }}"
                          class="weui-navbar__item {{ activeIndex == index ? 'weui-bar__item_on' : ''}}"
                          bindtap="tabClick">
                        <view class="weui-navbar__title">{{ item }}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider"
                      style="transform: translateX({{ sliderOffset }}px);-webkit-transform: translateX({{ sliderOffset }}px);width: {{ 100/tabs.length }}%"></view>
            </view>
            <view wx:if="{{ activeIndex == 0 }}" class="weui-tab__panel">
                <view class="list">
                    <view class="item" wx:for="{{ ranks }}" wx:key="{{ id }}">
                        <text class="rank"> {{ index + 1 }}</text>
                        <view class="user">
                            <image class="user-face" src="{{ item.user_info.avatar_url }}"></image>
                            <text class="user-name">{{ item.user_info.nickname }}</text>
                        </view>
                        <text class="step"> {{ item.step }}</text>
                    </view>
                </view>
            </view>
            <view wx:if="{{ activeIndex == 1 }}" class="weui-tab__panel" style="margin-top: 20rpx">
                <view class='sign'>
                    <image class="summary-image" src="/static/image/index1.jpg" bindtap='turnToSign'></image>
                    <text class="summary-text"></text>
                </view>
                <view class='sign'>
                    <image class="summary-image" src="/static/image/index2.jpg" bindtap='turnToCheck'></image>
                    <text class="summary-text"></text>
                </view>
                <view class='sign'>
                    <image class="summary-image" src="/static/image/index3.jpg" bindtap='turnToMap'></image>
                    <text class="summary-text"></text>
                </view>
                <view class='sign'>
                    <image class="summary-image" src="/static/image/index4.jpg" bindtap='turnToRules'></image>
                    <text class="summary-text"></text>
                </view>
                <view class='sign-bottom'>
                    <image class="summary-image" src="/static/image/index5.jpg" bindtap='turnToFeedback'></image>
                    <text class="summary-text"></text>
                </view>
            </view>
        </view>
    </view>
</view>
