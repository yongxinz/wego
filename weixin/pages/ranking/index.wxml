<view class="swiper-tab">
    <view class="swiper-tab-list {{ currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全国排名</view>
    <view class="swiper-tab-list {{ currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">个人数据</view>
</view>

<swiper current="{{ currentTab }}" class="swiper-box" duration="300" style="height:{{ winHeight - 31}}px"
        bindchange="bindChange">
    <swiper-item>
        <view>
            <view class="list">
                <view class="item" wx:for="{{ ranks }}" wx:key="{{ id }}">
                    <text class="rank"> {{ index + 1 }}</text>
                    <view class="user">
                        <image class="user-face" src="{{ item.user_info.avatar_url }}"></image>
                        <text class="user-name">{{ item.user_info.nickname }}</text>
                    </view>
                    <text class="time"> {{ item.step }}</text>
                </view>
            </view>
        </view>
    </swiper-item>

    <swiper-item>
        <view>我是呵呵</view>
    </swiper-item>
</swiper>
